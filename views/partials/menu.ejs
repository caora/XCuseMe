<div id="menu">
  <!-- List -->
  <ul class="list collection">
    <% for(var i=0; i<menu.length; i++) { %>

        <li class="collection-header">
            <p class="category"><%= menu[i].name %></p>
        </li>

        <% for(var j=0; j<menu[i].items.length; j++) { %>

          <li class="collection-item avatar" id="<%= menu[i].items[j].pk %>">
              <!-- <img src="<%= menu[i].img %>" class="circle"> -->
              <img src="http://imworld.aufeminin.com/dossiers/D20130502/ernaehrungsfehler-7-132203_L.jpg" class="circle">
              <span class="name title"> <%= menu[i].items[j].name %> </span>
              <p class="description"><%= menu[i].items[j].description %></p>
              <p class="price"><%= menu[i].items[j].prices[0] %> â‚¬</p>
              <i class="fa fa-arrow-up btn_plus_amount" aria-hidden="true"></i>
              <i id class="fa fa-arrow-down btn_minus_amount" aria-hidden="true"></i>
              <span class="amount">0</span>


          </li>
          <% } %>



    <% } %>

  </ul>
 <!-- Modal FoodItem Details -->
 <div id="foodDetailModal" class="modal bottom-sheet">
   <div class="modal-content">
     <h4 class="modal-name"></h4>
     <p class="modal-description"></p>
   </div>
 </div>

 <!-- Modal Order Details -->
 <div id="orderDetailModal" class="orderModal modal bottom-sheet">
   <div class="modal-content">
     <h4>Your Order</h4>
     <ul id="orderList" class="modal-orderList collection">
     </ul>
     <h3>Total: <span id="totalPrice"></span></h3>
   </div>
   <div class="modal-footer">
      <a id="btn-complete-order" href="#!" class="modal-action modal-close btn waves-effect waves-light">Order now!</a>
    </div>
 </div>


</div>

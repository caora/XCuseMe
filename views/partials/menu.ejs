<div id="menu">

  <ul class="list collection">
    <% var currentCategory = ""; %>
    <% for(var i=0; i<menu.length; i++) { %>

      <% console.log(currentCategory); %>

      <%if (currentCategory != menu[i].category) { %>
        <% currentCategory = menu[i].category; %>
        <li class="collection-header">
            <p class="category"><%= menu[i].category %></p>
        </li>
      <% } %>
        <li class="collection-item avatar">
            <!-- <img src="<%= menu[i].img %>" class="circle"> -->
            <img src="http://imworld.aufeminin.com/dossiers/D20130502/ernaehrungsfehler-7-132203_L.jpg" class="circle">
            <span class="name title"> <%= menu[i].name %> </span>
            <p class="description"><%= menu[i].description %></p>
            <p class="price"><%= menu[i].price %> â‚¬</p>
            <i class="fa fa-arrow-up btn_plus_amount" aria-hidden="true"></i>
            <i class="fa fa-arrow-down btn_minus_amount" aria-hidden="true"></i>
            <span class="amount">10</span>

        </li>
    <% } %>

  </ul>

</div>
